<h1 class="text-center">All FoCo Blog Users</h1>
<div class="text-center">

  <!-- List all users, paginate the results -->
  <%= will_paginate %>
  <% @users.each do |user| %>
  <ul class="user-listing">
    <div class="row">
      <div class="well col-md-4 col-md-offset-4">
        <li><%= link_to gravitar_for(user), user_path(user) %></li>
        <li class="article-title"><%= link_to user.username, user_path(user) %></li>
        <li>
          <small>
            <%= pluralize(user.articles.count, 'article') if user.articles %>
          </small>
        </li>

        <!-- Alter user delete privileges based on session status -->
        <% if logged_in? and current_user.admin? %>
        <li>
          <%= link_to 'Delete this user', user_path(user),
                                          method: :delete,
                                          data: { confirm:
                                                 'Are you sure you want
                                                  to delete the user and their
                                                  articles?'
                                                 } %>
        </li>
        <% end %>

      </div>
    </div>
  </ul>
  <% end %>
  <%= will_paginate %>
</div>
