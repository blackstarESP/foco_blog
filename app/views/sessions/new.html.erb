<h1 class="text-center">Log In</h1>
<%= form_for :session, :html => { class: 'form-horizontal', role: 'form', url: login_path } do |f| %>

<!-- Email input field  -->
<div class="form-group">
  <%= f.label :email, class: 'control-label col-sm-2' %>
  <div class="col-sm-8">
    <%= f.email_field :email, class: 'form-control', placeholder: 'Enter email', autofocus: true %>
  </div>
</div>

<!-- Password input field  -->
<div class="form-group">
  <%= f.label :password, class: 'control-label col-sm-2' %>
  <div class="col-sm-8">
    <%= f.password_field :password, class: 'form-control', autocomplete: 'off' %>
  </div>
</div>

<!-- Submit button field  -->
<div class="form-group">
  <div class="col-sm-offset-2 col-sm-8">
    <%= f.submit 'Log in', class: 'btn btn-primary btn-sm' %>
    <%= link_to 'Cancel and return to articles list', articles_path, class: 'btn btn-danger btn-sm' %>
  </div>
</div>

<% end %>
