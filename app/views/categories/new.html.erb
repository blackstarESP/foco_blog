<h1 class="text-center">Create New Category</h1>
<%= render 'shared/errors', obj: @category %>
<%= form_for @category, :html => { class: 'form-horizontal', role: 'form' } do |f| %>
  <!-- New category name input field  -->
  <div class="form-group">
    <%= f.label :name, class: 'control-label col-sm-2' %>
    <div class="col-sm-8">
      <%= f.text_field :name, class: 'form-control', placeholder: 'Category name', autofocus: true %>
    </div>
  </div>
  <!-- Action buttons  -->
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-8">
      <%= f.submit 'Create new category', class: 'btn btn-primary btn-sm' %>
      <%= link_to 'Cancel and return to articles list', articles_path, class: 'btn btn-danger btn-sm' %>
    </div>
  </div>
<% end %>
