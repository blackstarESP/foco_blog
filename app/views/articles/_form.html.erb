<% if @article.errors.any? %>
<h5>The following errors prevented the article from being created:</h5>
<ul>
  <% @article.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
</ul>
<% end %>
<div class="row">
  <div class="col-sm-12">
    <%= form_for @article, :html => { class: 'form-horizontal', role: 'form' } do |f| %>
    <div class="form-group">
      <%= f.label :title, class: 'control-label col-sm-2' %>
      <div class="col-sm-8">
        <%= f.text_field :title, class: 'form-control', placeholder: 'Title of article', autofocus: true %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :description, class: 'control-label col-sm-2' %>
      <div class="col-sm-8">
        <%= f.text_area :description, class: 'form-control', placeholder: 'Article content' %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-8">
        <%= f.submit class: 'btn btn-primary btn-lg' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="text-center">
  <%= link_to '[ Cancel and return to articles list. ]', articles_path %>
</div>
