<!-- Error display partial -->
<%= render 'shared/errors', obj: @article %>
<div class="row">
  <div class="col-sm-12">
    <%= form_for @article, :html => { class: 'form-horizontal', role: 'form' }
        do |f| %>

      <!-- Article title input -->
      <div class="form-group">
        <%= f.label :title, class: 'control-label col-sm-2' %>
        <div class="col-sm-8">
          <%= f.text_field :title, class: 'form-control',
                                   placeholder: 'Title of article',
                                   autofocus: true %>
        </div>
      </div>

      <!-- Article description input -->
      <div class="form-group">
        <%= f.label :description, class: 'control-label col-sm-2' %>
        <div class="col-sm-8">
          <%= f.text_area :description, rows: 10,
                                        class: 'form-control',
                                        placeholder: 'Article content' %>
        </div>
      </div>

      <!-- Category checkboxes -->
      <div class="form-group">
        <div class="row">
          <div class="col-sm-offset-2 col-sm-8">
            <%= f.collection_check_boxes :category_ids, Category.all, :id,
                :name do |cb| %>
              <%= cb.label(class: 'checkbox-inline input-checkbox')
                  { cb.check_box(class: 'checkbox') + cb.text } %>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Article submit button -->
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-8">
          <%= f.submit class: 'btn btn-primary btn-sm' %>
          <%= link_to 'Cancel and return to articles list', articles_path,
              class: 'btn btn-danger btn-sm' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
